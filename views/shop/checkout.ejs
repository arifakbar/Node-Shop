<%- include('../includes/head.ejs') %>

        </head>
        <body>
                <%- include('../includes/nav.ejs') %>
                        <div class="container">
                                <br>
                                <h1 class="heading text-center text-decoration-underline">
                                        <%= pageTitle %>
                                </h1>
                                <br>
                                <table class="table table-dark table-striped table-hover">
                                        <tr>
                                                <th>Title</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                        </tr>
                                        <% if(products.length > 0){ %>
                                                <% products.forEach(p=>{ %>
                                                        <tr>
                                                                <td>
                                                                        <%= p.productId.title %>
                                                                </td>
                                                                <td>
                                                                        <%= p.quantity %>
                                                                </td>
                                                                <td>
                                                                        <%= p.productId.price %>
                                                                </td>
                                                        </tr>
                                                        <% }) %>
                                </table>
                                <p>Total: Rs.<%= total %>
                                </p>
                                
                                <div class="centered mt-3">
                                        <button class="btn btn-success" id="order-btn">ORDER</button>
                                            <script src="https://js.stripe.com/v3"></script>
                                            <script>
                                                var stripe = Stripe('pk_test_51IhUG2SFyEg8AS59joeULfWuFCKtpKDcTOUDX00rjHLLkvA1uxAR0uAMNw5Xys5xD3w7XycA98RxDnNv0lXde78g00PKBYd1NH');
                                                var btn = document.getElementById("order-btn");
                                                btn.addEventListener('click',function(){
                                                    stripe.redirectToCheckout({
                                                        sessionId : "<%= sessionId %>"
                                                    });
                                                });
                                            </script>
                                        </div>
                                        <% }else { %>
                                                No items in cart.
                                                <% } %>
                        </div>
                        <%- include('../includes/end.ejs') %>